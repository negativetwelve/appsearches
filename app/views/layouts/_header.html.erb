<header class="header">
  <span class="app-logo">
    <%= link_to "APPSEARCH.ES", root_path %>
  </span>
  <span class="header-search">
    <form action="<%= apps_path %>" method="get" >
      <div class="input-append">
        <%= text_field_tag :search, params[:search], value: params[:search] %>  
        <%= submit_tag "Search", name: nil, class: "btn" %>
      </div>
    </form>
  </span>
  <span class="total-apps">
    <%= "#{number_with_delimiter(App.count, :delimiter => ',')} apps have been indexed." %>
  </span>
</header>